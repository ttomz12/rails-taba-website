            <i class="fab fa-linkedin"></i>
          <% end %>
        </h2>
        <h4>Co-Fundador</h4>
      </div>
      <div class="company-logos">
        <div class="company-logo">
          <%= link_to href="https://www.rappi.com" do %>
            <%= cl_image_tag("https://res.cloudinary.com/dqxwg5nmh/image/upload/v1625581514/Tabato/Rappi_logo.svg_wbceug.png",
            width: 150, height: 55, crop: :fill) %>
          <% end %>
        </div>
        <div class="company-logo">
          <%= link_to href="https://www.truora.com" do %>
            <%= cl_image_tag("https://res.cloudinary.com/dqxwg5nmh/image/upload/v1625581514/Tabato/truoralogo_ixhngr.png",
            width: 150, height: 65, crop: :fill) %>
